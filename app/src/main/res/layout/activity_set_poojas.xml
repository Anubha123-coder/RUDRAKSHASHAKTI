<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Authentication.SetPoojas">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- Back button-->
            <androidx.cardview.widget.CardView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:elevation="24dp"
                app:cardCornerRadius="50dp">

                <ImageButton
                    android:id="@+id/backBtn"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/round_button_back"
                    android:contentDescription="@string/back"
                    android:src="@drawable/back_arrow" />

            </androidx.cardview.widget.CardView>

            <!--Title text-->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Select Pujans &amp; SanskarsThat You Provide"
                android:textAlignment="center"
                android:textAppearance="@style/information_text" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/poojas"
                android:minHeight="400dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:nestedScrollingEnabled="false"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>


            <!--Next button-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-35dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="20dp"
                app:cardCornerRadius="50dp">

                <ImageButton
                    android:id="@+id/nextBtn"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@drawable/next_btn"
                    android:contentDescription="@string/next"
                    android:src="@drawable/ic_arrow_1" />

            </androidx.cardview.widget.CardView>

            <!--background bottom image-->
            <View
                android:layout_width="wrap_content"
                android:layout_height="101.63dp"
                android:layout_gravity="bottom"
                android:background="@drawable/waves" />
        </LinearLayout>
    </RelativeLayout>


</androidx.core.widget.NestedScrollView>