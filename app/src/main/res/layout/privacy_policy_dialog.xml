<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <LinearLayout
        android:id="@+id/rateExpertDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_background"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disclaimer Policy"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="10dp"
            android:textAlignment="textStart"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            />
        <!-- Expert Review edit text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edit_text_review_outline"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:justificationMode="inter_word"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="12dp"
                    android:text="@string/diaclamer"
                    />

            </ScrollView>

        </LinearLayout>

        <com.sinaseyfi.advancedcardview.AdvancedCardView
            android:id="@+id/agreeBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="16dp"
            app:background_Color="@color/Pink_Magenta"
            app:cornerRadius="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:backgroundTint="@color/Pink_Magenta"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:fontFamily="@font/poppins_semi_bold"
                android:text=" I Agree "
                android:textSize="16sp" />

        </com.sinaseyfi.advancedcardview.AdvancedCardView>

    </LinearLayout>

</RelativeLayout>